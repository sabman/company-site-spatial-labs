---
import { Picture } from '@astrojs/image/components';

import { isBlogPostRouteEnabled } from '~/utils/blog';
import type { Post } from '~/types';

import { findImage } from '~/utils/images';
import { getPermalink } from '~/utils/permalinks';

export interface Props {
  post: Post;
}

const { post } = Astro.props;
const image = await findImage(post.image);
---

<article class="mb-6 transition">
  <div class="relative md:h-64 rounded-md mb-6">
    {
      image && (
        <Picture
          src={image}
          class="md:object-cover w-full md:w-auto md:h-full rounded-md bg-gray-400 dark:bg-slate-700"
          widths={[400, 900]}
          width={400}
          height={224}
          sizes="(max-width: 900px) 400px, 900px"
          alt={post.title}
          aspectRatio="16:9"
          loading="lazy"
          decoding="async"
        />
      )
    }
  </div>
  <h3 class="mb-2 text-xl font-bold leading-tight sm:text-2xl">
    {
      isBlogPostRouteEnabled ? (
        <a
          href={getPermalink(post.permalink, 'post')}
          class="hover:text-primary dark:hover:text-blue-700  transition ease-in duration-200"
        >
          {post.title}
        </a>
      ) : (
        post.title
      )
    }
  </h3>
  <p class="text-muted dark:text-slate-400 text-lg">{post.excerpt || post.description}</p>
</article>
